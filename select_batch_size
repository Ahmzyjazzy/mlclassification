import numpy as np 
import os
list_dir=[]
def select_batch(path):
    x=0
    for files in os.listdir(path):
        x+=1
        list_dir.append(x)
    if len(list_dir)<=100:
            return( np.random.randint(0,21))
    elif len(list_dir) >100:
            return(len(list_dir)/100)
    else :
         print('select a folder')

